extends layout

block content
  h1 HLS Splice 
  p Daoud Merchant

  form(method='POST' action='')
    div
      label(for='content') Content:
      input#content(type='text', placeholder='Paste main .m3u8 link here' name='content' required='true')
      label(for='ad') Ad:
      input#ad(type='text', placeholder='Paste advert .m3u8 link here' name='ad' required='true')
      fieldset
        legend Insertion point
        label(for='time') Time:
        input#time(type='number' placeholder='In microseconds, seconds or minutes' name='time' required='true')
        label(for='unit') Unit:
        select#unit(type='select', placeholder='Select unit' name='unit' required='true')
          option(value='ms' selected='true') ms
          option(value='sec') sec
          option(value='min') min
      button(type='submit') Generate spliced link
  
  block result
